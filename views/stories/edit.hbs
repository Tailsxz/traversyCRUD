<h2>Edit Story</h2>
<div class="row">
  <form action="/stories" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" id="title" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>
  

    <div class="row">
      <div class="input-field">
        <select name="status" id="status">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <h3>Edit Us Your Story:</h3>
        <textarea name="body" id="body">{{story.body}}</textarea>
      </div>
    </div>

    <div class="row">
      <input type="submit" value="Save" class="btn" role="submit button">
      <a href="/dashboard" class="btn orange">Cancel</a>
    </div>
  </form>
</div>
